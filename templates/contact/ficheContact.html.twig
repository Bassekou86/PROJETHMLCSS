{% extends 'base.html.twig' %}
{% block title %}Liste des contatcs{% endblock %}
{% block body %}
<div class="row">
        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3">
            <div class="card mb-3 container, d-flex align-items-center" style="width: 18rem;"> 
                <h4 class="card-title text-center">{{leContact.nom}} {{leContact.prenom}}</h4>
                <img class="avatar" style="height: auto; max-width: 200px; display: block;" src="{{leContact.avatar}}" class="avatar mx-auto my-3" alt="image avatar">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{leContact.rue}}</li>
                    <li class="list-group-item">{{leContact.cp}}</li>
                    <li class="list-group-item">{{leContact.ville}}</li>
                    <li class="list-group-item">{{leContact.mail}}</li>
                    <li class="list-group-item">
                    {%if leContact.sexe==0%}
                        <span class = "homme">Homme</span>
                        {%else%}
                        <span  class = "femme"> Femme</span>
                    {% endif %}
                    <div class= "card-body">
                    <a href="{{path('app_contacts')}}" class="btn btn-primary btn-block text-center w-100">Retour</a>
                    </div>
                </ul>
            </div>
        </div>
</div>
